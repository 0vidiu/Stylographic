/**
 * Standard button
 */
.button {
    transition-custom($property = background-color);
    
    z-index: 20;
    display: inline-block;
    margin: 0 0 rem($unit);
    border: 0;
    border-radius: rem($border-radius);
    padding: 0 rem($unit * 2);
    background-color: $color-primary;
    color: white;
    font-weight: bold;
    line-height: rem($unit * 2);
    letter-spacing: 1px;
    text-decoration: none;
    text-transform: uppercase;
    outline: 0;
    
    vertical-align: top;
    
    &:hover {
        background-color: darken($color-primary, 20%);
    }
    
    &.-s {
        margin: 0 0 rem($unit * 1.5);
        padding: 0 rem($unit * 1.5);
        font-size: $font-size-small;
        line-height: rem($unit * 1.5);
    }
    
    &.-l {
        border-radius: rem($border-radius * 2);
        padding: 0 rem($unit * 2);
        font-size: $font-size-headings[1];
        line-height: rem($unit * 3);
        letter-spacing: rem(2);
    }
    
    &.-xl {
        border-radius: rem($border-radius * 3);
        padding: 0 rem($unit * 3);
        font-size: $font-size-headings[2];
        line-height: rem($unit * 4);
        letter-spacing: rem(3);
    }
    
    // border-only button
    &.-ghost {
        transition-custom($property = color);
        
        position: relative;
        background-color: transparent;
        color: $color-primary;
        
        &:after {
            transition-custom($property = background-color);
            width-from-100(6);
            height-from-100(6);
            
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            z-index: -1;
            display: block;
            border: solid rem(3) $color-primary;
            border-radius: inherit;
        }
        
        &:hover {
            color: $color-button-text;
            
            &:after {
                border-color: $color-primary;
                background-color: $color-primary;
            }
        }
    }
    
    .icon {
        // Enable click trough icons
        pointer-events: none;
    }
}
.button--default {
    @extends .button;
    
}
